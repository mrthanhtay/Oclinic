<div class='mt-4'>
  <div
    id='carouselExampleIndicators'
    class='carousel slide'
    data-ride='carousel'
  >
    <div class='carousel-inner'>
      <div class='carousel-item active'>
        <div class='row'>
          <div class='align-self-center col-lg-6'>
            <div class='text-center'>
              <h1 class='introduction-text text-center'>Online Clinic NOW</h1>
              <p><a
                  class='btn btn-primary btn-lg'
                  href='/videocall'
                  role='button'
                >Join ROOM</a></p>
            </div>
          </div>
          <div class='col-lg-6'>
            <img
              class='d-block w-100'
              src='https://cdn.dribbble.com/users/2330950/screenshots/6213995/93_4x.jpg'
              alt='First slide'
            />
          </div>
        </div>
      </div>
    </div>

    <div class='danhSachKhoa'>
      <div class='row'>
        {{#each accounts}}
          <div class='col-sm-6 col-lg-3'>
            <div class='card'>
              <a href='/accounts/{{this.slug}}'>
                <img
                  class='card-img-top'
                  src='{{this.image}}'
                  alt='{{this.name}}'
                />
              </a>
              <div class='card-body'>
                <a href='/accounts/{{this.slug}}'>
                  <h5 class='card-title'>{{this.name}}</h5>
                </a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>