<div class='mt-4'>
  <div class='row'>
    {{#each accounts}}
      <div class='col-sm-6 col-lg-4'>
        <div class='card'>
          <a href='/accounts/{{this.slug}}'>
            <img
              class='card-img-top'
              src='{{this.image}}'
              alt='{{this.name}}'
            />
          </a>
          <div class='card-body'>
            <a href='/accounts/{{this.slug}}'>
              <h5 class='card-title'>{{this.name}}</h5>
            </a>
            <p class='card-text'>{{this.description}}</p>
            <a href='/accounts/{{this.slug}}' class='btn btn-primary'>Xem th√¥ng
              tin</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>